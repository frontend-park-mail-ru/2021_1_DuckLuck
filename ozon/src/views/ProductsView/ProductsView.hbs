<div class="{{productsStyles.block}}">
    <div class="{{productsStyles.contentWrapper}}">
        {{{filter}}}
        <div class="{{productsStyles.body}}">
            <select class="{{productsStyles.select}}">
                {{#each select}}
                    <option class="{{../textStyles.title}}" key="{{this.key}}" direction="{{this.direction}}" {{#ifEquals this.key ../sort.key}}{{#ifEquals this.direction ../sort.direction}}selected{{/ifEquals}}{{/ifEquals}}>
                        {{this.name}}
                    </option>
                {{/each}}
            </select>

            <div class="{{productsStyles.listWrapper}}">{{{productsList}}}</div>
            {{#ifEquals this.isEmpty false}}
                <div class="{{productsStyles.footer}}">
                    {{{pagination}}}
                </div>
            {{/ifEquals}}
        </div>
    </div>
    {{#ifEquals this.isEmpty true}}
        <div class="{{productsStyles.emptyText}}">
            <span class="{{textStyles.title}}">Не найдено ни одного товара</span>
            <a class="{{textStyles.title}} {{productsStyles.toMainLink}}" href="/">вернуться на главную</a>
        </div>
    {{/ifEquals}}
</div>
